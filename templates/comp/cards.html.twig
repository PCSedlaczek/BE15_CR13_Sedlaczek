<div id="content" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 p-4">

  {% for event in events %}
  <div class="col">
    <div class="card shadow">
      <a class="{{link ?? ''}}" href="/event/{{event.id}}">
        <img src="{{asset("img/" ~ event.img)}}" class="card-img-top" 
          alt="{{event.title}} - {{event.subtitle}} | {{event.organizer.name}}">
      </a>
      <div class="card-body pb-0">
        <h5 class="card-title">
          {{event.title}}
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
          {{event.subtitle}}
        </h6>
        <h6 class="card-subtitle my-3 text-primary ">
          {{event.date | date("D, d M Y")}},
          {{event.start | date("G:i")}} -
          {{event.end | date("G:i")}}
        </h6>
        <h6>{{event.organizer.name}}</h6>
        <p class="small text-muted">
          {{event.location.name}}
          {{event.location.zip ? ' â€¢ ' ~ event.location.zip : ''}} 
          {{event.location.city}}
        </p>
      </div>
      <div class="card-body d-flex justify-content-between py-0">
        <p>{{event.price == "0.00" ? "<span class='text-success'>Free</span>" : "EUR" | currency_symbol ~ event.price}}</p>
        <div class="btn-group gap-3 {{display ?? ''}}" role="group">
          <a class="text-secondary" href="/event/{{event.id}}">
            <i class="bi bi-calendar-event-fill"></i>
          </a>
          <a class="text-success" href="/edit/{{event.id}}">
            <i class="bi bi-calendar-plus-fill"></i>
          </a>
          <a class="text-danger" href="delete/{{event.id}}">
            <i class="bi bi-calendar-x-fill"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}

</div>